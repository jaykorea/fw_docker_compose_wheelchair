<!--
  Example standalone launcher for the velocity smoother
 -->
<launch>
  <arg name="node_name"             value="velocity_smoother_joy"/>
  <arg name="nodelet_manager_name"  value="nodelet_manager_joy"/>
  <arg name="config_file"           value="$(find yocs_velocity_smoother)/param/standalone_joy.yaml"/>
  <arg name="raw_cmd_vel_topic"     value="/cmd_vel/joy"/>
  <arg name="smooth_cmd_vel_topic"  value="/cmd_vel/joy/mux"/>
  <arg name="robot_cmd_vel_topic"   value="/cmd_vel"/>
  <arg name="odom_topic"            value="/odom_md"/>
  
  <!-- nodelet manager -->
  <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)" args="manager"/>
  
  <!-- velocity smoother -->
  <include file="$(find yocs_velocity_smoother)/launch/velocity_smoother.launch">
    <arg name="node_name"             value="$(arg node_name)"/>
    <arg name="nodelet_manager_name"  value="$(arg nodelet_manager_name)"/>
    <arg name="config_file"           value="$(arg config_file)"/>
    <arg name="raw_cmd_vel_topic"     value="$(arg raw_cmd_vel_topic)"/>
    <arg name="smooth_cmd_vel_topic"  value="$(arg smooth_cmd_vel_topic)"/>
    <arg name="robot_cmd_vel_topic"   value="$(arg robot_cmd_vel_topic)"/>
    <arg name="odom_topic"            value="$(arg odom_topic)"/>
  </include>
</launch>